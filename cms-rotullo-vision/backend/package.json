{
  "name": "cms-ariana-borges-backend",
  "version": "1.0.0",
  "description": "Payload CMS backend for Instituto Ariana Borges website content management",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build": "tsc && copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist && copyfiles -u 1 src/assets-seed/**/* dist && payload build",
    "start": "node dist/server.js",
    "serve": "node dist/server.js",
    "payload:migrate": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js payload migrate",
    "generate:types": "payload generate:types",
    "seed": "ts-node src/seed.ts"
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@payloadcms/bundler-webpack": "^1.0.0",
    "@payloadcms/db-postgres": "^0.8.0",
    "@payloadcms/richtext-slate": "^1.5.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "ignore-styles": "^5.0.1",
    "payload": "^2.30.0",
    "sib-api-v3-sdk": "^8.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^7.0.9",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
